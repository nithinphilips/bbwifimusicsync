<log4net>
  <!--
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%timestamp [%5level] %logger %ndc - %message%newline%exception" />
    </layout>
  </appender>
  -->

  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
	  <file value="${APPDATA}\Music Sync\WifiMusicSync.log" />
    <appendToFile value="true" />
    <maximumFileSize value="1024KB" />
    <maxSizeRollBackups value="2" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level [%thread] %-5level %logger %ndc - %message%newline%exception" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="RollingFile" />
  </root>
</log4net>
